@model IEnumerable<Gift>

@{
    ViewBag.Title = "All Gifts";
    Layout = "_Layout";
}

<h2>All Gifts</h2>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3 w-auto" asp-controller="Admin" asp-action="CreateGift">Create</a>

    <div class="card mb-3">
        <div class="card-header">
            Products
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var gift in Model)
                {
                    <div class="col-3 col-md-4 col-sm-12">
                        <h5>@gift.Name</h5>
                        <img alt="Product" src="" class="img-thumbnail" />
                        <div class="row">
                            <a class="btn btn-danger ml-4 mt-2" asp-controller="Admin" asp-action="DeleteGift" asp-route-id="@gift.Id">Delete</a>
                            <a class="btn btn-primary ml-4 mt-2" asp-controller="Admin" asp-action="EditGift asp-route-id="@gift.Id">Edit</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            There are no gifts
        </div>
        <div class="card-body">
            <h5 class="card-title">Create a gift</h5>
            <a class="btn btn-primary w-auto" asp-controller="Admin" asp-action="CreateGift">Create</a>
        </div>
    </div>
}
