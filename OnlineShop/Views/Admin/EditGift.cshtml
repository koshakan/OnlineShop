@model EditGiftViewModel

@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
}

<h2>Edit Tire</h2>

<form method="post" class="mt-3" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
        <input type="hidden" asp-for="OldImage" />
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="hidden" asp-for="CategoryId" value="1" />
            <select disabled="" asp-for="CategoryId" class="custom-select mr-sm-2">
                <option value="1">Tire</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose file if you want to change</label>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-4">
            <img alt="Product" src="~/img/tire/@ViewBag.OldImage" class="card-img" />
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListTires" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>

@section Scripts
    {
    <script>
            $(document).ready(function() {
                $('.custom-file-input').on('change', function() {
                    let fileName = $(this).val().split("\\").pop();
                    $('.custom-file-label').html(fileName);
                })
            })
    </script>
}
