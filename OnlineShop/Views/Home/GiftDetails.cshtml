@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager
@{ ViewBag.Title = "Gift";
    Layout = "_Layout";
}

<div class="container align-items-center" id="app">
    <div class="row align-items-center">
        <h2>Tire: @ViewBag.Gift.Name</h2>
    </div>
    <div class="mt-3">
        <div class="card mb-4">
            <div class="card-body p-lg-4 p-xl-5">
                <div class="row">
                    <div class="col-12 col-sm-9 col-lg-8">
                        <p class="m-0 p-0 text-uppercase font-weight-bold">Tire</p>
                        <h2 class="h2 mb-3 mt-1">@ViewBag.Gift.Name</h2>
                        <p class="pr-lg-5 text-muted">@ViewBag.Gift.Description</p>
                        <h2 class="h2 mb-3 mt-1">@ViewBag.Gift.Price</h2>
                     </div>
                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <div class="row">
                                    <div class="col-sm-12 col-6">
                                        <button product-id="" category-id="=" v-on:click.stop.prevent="addToCart" class="btn btn-outline-primary mt-3">Add to cart</button>
                                    </div>
                                    <div class="col-sm-12 col-6">
                                        <p v-if="error" class="text-danger">Something went wrong!</p>
                                        <p v-if="success" class="text-success">Successful! Quantity: {{quantity}}</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <p class="mt-3">Please <a class="btn-link" asp-area="Identity" asp-page="/Account/Login">Login</a> to make a purchase.</p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-sm-3 col-lg-4 d-none d-sm-flex align-items-start align-items-lg-center">
                        <img src="~/img/tire/" alt="" class="img-fluid" width="100" height="400">
                    </div>
                </div>
            </div>
        </div>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/vue.resource/1.0.3/vue-resource.min.js"></script>
<script src="~/js/addToCart.js"></script>